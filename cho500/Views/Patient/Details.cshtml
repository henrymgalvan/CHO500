@model cho500.Entity.Person

@{
    ViewBag.Title = "Patient Info";
}

<h3>Details of @Model.FullName</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd>@Html.DisplayFor(model => model.FullName)</dd>
        <dt>@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
        <dd>@Html.DisplayFor(model => model.DateOfBirth)</dd>
        <dt>@Html.DisplayNameFor(model => model.Sex)</dt>
        <dd>@Html.DisplayFor(model => model.Sex)</dd>
        <dt>@Html.DisplayNameFor(model => model.BloodType)</dt>
        <dd>@Html.DisplayFor(model => model.BloodType.Type)</dd>
        <dt>@Html.DisplayNameFor(model => model.CivilStatus)</dt>
        <dd>@Html.DisplayFor(model => model.CivilStatus)</dd>
        <dt>@Html.DisplayNameFor(model => model.PhilHealthNo)</dt>
        <dd>@Html.DisplayFor(model => model.PhilHealthNo)</dd>
        <dt>@Html.DisplayNameFor(model => model.HouseholdProfileID)</dt>
        <dd>@Html.DisplayFor(model => model.HouseholdProfileID)</dd>
        <dt>@Html.DisplayNameFor(model => model.ContactNumber)</dt>
        <dd>@Html.DisplayFor(model => model.ContactNumber)</dd>
        <dt>@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd>@Html.DisplayFor(model => model.Notes)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PersonID }) |   
    @Html.ActionLink("Back to List of Patients", "Index")
</p>

@Html.ActionLink("Create New Consultation Record", "Create", "Consults", new { PatientId = Model.PersonID}, null) |
@Html.ActionLink("View Child Health Record", "Details", "ChildRecord", new { id = Model.PersonID }, null)


<table class="table">
    <tr>
        <th>Chief Complaint</th>        
        <th>Admitted By</th>
        <th>Date Of Consult</th>
        <th>Previous Consult Date</th>
        <th>Place of Previous Consult</th>
        <th>Age</th>
        <th>Physician</th>
    </tr>
    @foreach (var item in Model.Consultations)
    {
        <tr>
            <td>@Html.ActionLink(item.ChiefComplaint, "Details","Consults", new { id = item.ConsultationID }, null)</td>
            <td>@Html.DisplayFor(modelItem => item.AdmittedBy)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfConsult)</td>
            <td>@Html.DisplayFor(modelItem => item.PreviousConsultDate)</td>
            <td>@Html.DisplayFor(modelItem => item.PreviousConsult)</td>
            <td>@Html.DisplayFor(modelItem => item.Age)</td>
            <td>@Html.DisplayFor(modelItem=>item.Physician.Name)</td>
        </tr>
    }

</table>
